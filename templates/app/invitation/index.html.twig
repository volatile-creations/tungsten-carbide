{% extends 'app.base.html.twig' %}

{% trans_default_domain 'invitation' %}
{% block title %}{{ 'title'|trans }}{% endblock %}

{% block content %}
    <div class="bg-white py-6 rounded-md mx-auto max-w-7xl px-6">
        <div class="text-base leading-7 text-gray-700">
            <p class="text-base font-semibold leading-7 text-indigo-600">{{ 'invitation.subtitle'|trans }}</p>
            <h1 class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{{ 'invitation.title'|trans }}</h1>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <div>
                    <p class="mt-6">
                        {{ 'invitation.introduction'|trans({'name': app.user.name, 'partySize': app.user.guests.count}) }}
                    </p>

                    <h2 class="mt-8 text-xl font-semibold leading-6 text-gray-900">
                        {{ 'invitation.attendance.title'|trans }}
                    </h2>
                    <p class="mt-2">
                        {{ 'invitation.attendance.introduction'|trans }}
                    </p>

                    {% for event in events|sort((a, b) => a.start <=> b.start) %}
                        <div class="mt-6">
                            <h3 class="text-lg font-semibold leading-6 text-gray-900">
                                {{ (event.name ~ '.title')|trans }}
                                <span class="text-base text-gray-400 ml-2">
                                    {{ event.start|format_datetime(pattern='EEEE HH:mm') }}
                                </span>
                            </h3>
                            <p class="mt-2">
                                {{ (event.name ~ '.description')|trans }}
                            </p>

                            {% for guest in app.user.guests %}
                                <p>
                                    {% if app.user.isGuest(guest) %}
                                        <strong>{{ guest.name }}</strong>
                                    {% else %}
                                        <em>{{ guest.name }}</em>
                                    {% endif %}

                                    {% if guest.events.contains(event) %}
                                        Attending
                                    {% else %}
                                        Not attending
                                    {% endif %}
                                </p>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
                <div>
                    <img
                        class="w-full h-auto mt-6"
                        alt="Vlintenholt"
                        src="https://www.vlintenholt.nl/images/gallery/40p/bijzondere-groepsaccommodatie-drenthe-vlintenholt-002.JPG">
                </div>
            </div>
        </div>
        <dl class="mt-10 grid grid-cols-2 gap-8 border-t border-gray-900/10 pt-10 sm:grid-cols-4">
            <div>
                <dt class="text-sm font-semibold leading-6 text-gray-600">{{ 'invitation.start'|trans }}</dt>
                <dd class="mt-2 text-3xl font-bold leading-10 tracking-tight text-gray-900">{{ date(events['pre-party'].start)|format_datetime('full', 'short') }}</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold leading-6 text-gray-600">{{ 'invitation.ceremony'|trans }}</dt>
                <dd class="mt-2 text-3xl font-bold leading-10 tracking-tight text-gray-900">{{ date(events.ceremony.start)|format_datetime('full', 'short') }}</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold leading-6 text-gray-600">{{ 'invitation.rsvps'|trans }}</dt>
                <dd class="mt-2 text-3xl font-bold leading-10 tracking-tight text-gray-900">12 / 37</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold leading-6 text-gray-600">{{ 'invitation.address'|trans }}</dt>
                <dd class="mt-2 tracking-tight text-gray-900">
                    <a href="https://maps.app.goo.gl/8iFbsFwzNvWPvjtt8" target="_blank" rel="nofollow noreferrer" class="hover:text-violet-500 flex items-start gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                        </svg>

                        <div>
                            <strong>Camping 't Vlintenholt</strong><br>
                            <span class="block text-sm">
                                Borgerderweg 17<br>
                                7873 TC Odoorn
                            </span>
                        </div>
                    </a>
                </dd>
            </div>
        </dl>
    </div>
{% endblock %}