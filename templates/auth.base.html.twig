{% extends 'base.html.twig' %}

{% block body %}
    {% block language_switcher %}
        {% if app.enabled_locales|length > 0 %}
            <div class="absolute top-0 right-0 p-3">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block text-indigo-600 -mt-1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
                </svg>
                {% for locale in app.enabled_locales %}
                    {% if not loop.first %}|{% endif %}
                    {% if locale == app.locale %}
                        <span>{{ locale|upper }}</span>
                    {% else %}
                        <a
                            class="text-indigo-600 hover:text-indigo-700 font-bold"
                            href="{{ path(app.current_route, app.current_route_parameters|merge({'locale': locale})) }}">{{ locale|upper }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    {% endblock %}

    {% block card %}
        <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
            <div class="sm:mx-auto sm:w-full sm:max-w-sm bg-white p-6 rounded">
                <div>
                    {% block card_icon %}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mx-auto h-16 w-auto text-indigo-600">
                            {% block card_icon_path %}
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                            {% endblock %}
                        </svg>
                    {% endblock %}

                    {% block card_heading %}
                        <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
                            {% block card_title %}{{ block('title') }}{% endblock %}
                        </h2>
                    {% endblock %}
                </div>

                <div class="mt-10">
                    {% block card_body %}
                        {% if form is defined %}
                            {% block form %}
                                {% form_theme form 'form/login.html.twig' %}
                                {{ form(form) }}
                            {% endblock %}
                        {% endif %}
                    {% endblock %}
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}